<Window x:Class="Trade.RedactProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Trade"
        mc:Ignorable="d"
        Title="RedactProduct" Height="800" Width="450"
        FontFamily="{DynamicResource GlobalFont}">
    <Grid>
        <StackPanel Margin="15px">
            <TextBlock Text="Артикул"/>
            <TextBox Margin="0 0 0 10px" x:Name="Article"/>
            <TextBlock Text="Наименование"/>
            <TextBox Margin="0 0 0 10px" x:Name="Name"/>
            <TextBlock Text="Описание"/>
            <TextBox Margin="0 0 0 10px" x:Name="Desc"/>
            <TextBlock Text="Категория"/>
            <TextBox Margin="0 0 0 10px" x:Name="Category"/>
            <TextBlock Text="Производитель"/>
            <TextBox Margin="0 0 0 10px" x:Name="Manufracturer"/>
            <TextBlock Text="Стоимость"/>
            <TextBox Margin="0 0 0 10px" x:Name="Price"/>
            <TextBlock Text="Скидка (%)"/>
            <TextBox Margin="0 0 0 10px" x:Name="Discount"/>
            <TextBlock Text="Кол-во на складе"/>
            <TextBox Margin="0 0 0 10px" x:Name="Quantity"/>
            <Button Content="Выбрать изображение" x:Name="SelectImage" Click="SelectImage_Click"/>
            <Image x:Name="SelectedImage" Height="130px" HorizontalAlignment="Center" Margin="0 30px 0 0"/>
            <Button Content="Сохранить" Margin="0 70px 0 0" Height="100px" FontSize="20pt" x:Name="SaveInfo" Click="SaveInfo_Click"/>
        </StackPanel>
    </Grid>
</Window>
